<h1>Todo List</h1>
<hr />

<%= link_to 'New Todo', new_todo_path %>

<% if @todos.empty? %>
  <h3>You have finished your Todo List, find something else to do.</h3>
  <% else %>
  <ul>
    <% @todos.each do |todo| %>
    <li>
      <%= link_to todo.title, todo_path(todo) %>
      <%= link_to 'Delete', todo_path(todo), method: :delete %>
      <%= link_to 'Show Description', todo_path(todo) %>
    </li>
    <% end %>
  </ul>
<% end %>
